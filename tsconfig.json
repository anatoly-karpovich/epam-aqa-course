{
    "compilerOptions": {
        "outDir": "./dist",
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "es2022",
        "types": [
            "node",
            "@wdio/globals/types",
            "expect-webdriverio",
            "@wdio/mocha-framework"
        ],
        "skipLibCheck": true,
        "noEmit": false,
        // "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src/**/*.ts", "wdio.conf.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}